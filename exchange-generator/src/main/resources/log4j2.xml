<?xml version="1.0" encoding="UTF-8"?>
        <Configuration status="WARN">
        <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
        <PatternLayout pattern="%d{HH:mm:ss.SSS} %-5level: %msg%n"/>
        </Console>
        <Kafka name="Kafka" topic="logstash" syncSend="false">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} %level %logger{36} - %msg%n"/>
        <!--
        <Property name="bootstrap.servers">localhost:9092</Property>
-->
            <Property name="bootstrap.servers">${env:SPRING_KAFKA_CONSUMER_BOOTSTRAP_SERVERS:-localhost:9092}</Property>
        </Kafka>
    </Appenders>
        <Loggers>
        <Root level="info">
        <AppenderRef ref="Kafka"/>
        </Root>
        <Logger name="org.apache.kafka" level="INFO" >
            <AppenderRef ref="Console"/>
        </Logger>
    </Loggers>
        </Configuration>